<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.RegisterActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_l"
        android:orientation="vertical"

        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="नाम"/>
        <EditText android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="wrap_content"
            android:hint="अपना नाम लिखिए" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="गाँव"/>
        <EditText
            android:id="@+id/input_Gaav"
            android:layout_width="match_parent"
            android:ems="10"
            android:hint="गाँव"
            android:inputType="text"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="उम्र" />

        <EditText
            android:id="@+id/input_age_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="अपनी उम्र लिखिए"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="जाति" />

        <Spinner
            android:id="@+id/category_spinner_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="जाति"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="फला"/>

        <EditText
            android:id="@+id/input_faala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="फला" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="राजस्व गाँव"/>

        <EditText
            android:id="@+id/input_rajasav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="राजस्व गाँव" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="मोबाइल न."/>

        <EditText
            android:id="@+id/input_phone_reg"
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="अपने मोबाइल नंबर डालिये" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="ग्राम पंचायत"/>
        <EditText android:id="@+id/reg_grampanc"
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="wrap_content"
            android:hint="ग्राम पंचायत"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="पंचायत समिति"/>
        <EditText android:id="@+id/reg_samiti"
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="wrap_content"
            android:hint="पंचायत समिति" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="जिला"/>
        <EditText android:id="@+id/input_city"
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="wrap_content"
            android:hint="जिला" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="@drawable/selector_button"
            android:text="रजिस्टर करे"/>


    </LinearLayout>
</ScrollView>