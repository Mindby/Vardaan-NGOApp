<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_formkit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FormKit">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:nestedScrollingEnabled="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                        <TextView
                            android:id="@+id/name_kp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                             tools:text="Rama Sinha" />




                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/grey" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name_kit"
                        android:layout_margin="4dp"
                        android:hint="नाम"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/age_kit"
                        android:layout_margin="4dp"
                        android:hint="उम्र"
                        android:inputType="number"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:hint="राजस्व गाँव"
                        android:id="@+id/RajasavGaav_kit"
                        android:inputType="text"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="16sp"></EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="जाति"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/category_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:spinnerMode="dialog" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="पंचायत समिति"
                        android:textSize="16sp" />


                    <Spinner
                        android:id="@+id/Samiti_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:spinnerMode="dialog" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:id="@+id/Falla_kit"
                        android:hint="फला"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="16sp"></EditText>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:id="@+id/place_kit"
                        android:hint="स्थान"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:hint="गाँव"
                        android:id="@+id/village_kit"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="16sp"></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:hint="जिला- उदयपुर"
                        android:id="@+id/district_kit"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="16sp"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:hint="ग्राम पंचायत"
                        android:id="@+id/panchayat_kit"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="16sp"></EditText>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/uploaded_image_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <!--                    <ImageButton-->
                            <!--                        android:id="@+id/add_image"-->
                            <!--                        android:layout_width="100dp"-->
                            <!--                        android:layout_height="200dp"-->
                            <!--                        android:layout_gravity="center"-->
                            <!--                        android:layout_margin="4dp"-->
                            <!--                        android:layout_marginTop="4dp"-->
                            <!--                        android:src="@drawable/ic_add_box_black_24dp" />-->


                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/remove_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Remove All"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/upload_image"
        layout="@layout/uploadimage_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>