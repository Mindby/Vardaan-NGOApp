<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_formkit"
    tools:context=".ui.Form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="false"
    android:padding="4dp"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/name_kp"
                tools:text="Rama Sinha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/name_kit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="नाम"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/form_age"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/age_kit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/form_category_text"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="जाति"
                    android:visibility="gone"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/category_spinner"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="4dp"
                    android:spinnerMode="dialog" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:id="@+id/view_category"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="#757575" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/RajasavGaav_kit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="राजस्व गाँव"
                        android:inputType="text"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="पंचायत समिति"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />


                <Spinner
                    android:id="@+id/Samiti_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="4dp"
                    android:spinnerMode="dialog" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="#757575" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/panchayat_kit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ग्राम पंचायत"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/Falla_kit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="फला"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/place_kit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="स्थान"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/village_kit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="गाँव"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="जिला"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/district_kit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="उदयपुर"
                    android:paddingStart="4dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="#757575" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/students_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Students List"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:id="@+id/form_students_extra"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/uploaded_image_container_students_list"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/add_image_students_list"
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_add_box_black_24dp" />


                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/remove_image_students_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Remove All"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/students_photograph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Students Photograph"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:id="@+id/uploaded_image_container"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/add_image"
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_add_box_black_24dp" />


                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/remove_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Remove All"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/event_date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_event_black_24dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Date"
                android:textSize="16sp" />

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Send"
                android:textSize="26dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

